<script>
  let socket ;
  document.addEventListener('DOMContentLoaded', function() {
    socket = io();
    const updateButton = document.querySelector('.update-btn');
    socket.on('job_update', function(data) {
      console.log(data);

      if(data.status === 'FAILED'){
        window.alert('Update failed');
        window.location.reload();
      }
      else
      if(data.status === 'SUCCESS'){
        window.alert('Update completed');
        window.location.reload();
      }
      else{
        updateButton.innerHTML = "Updating... " + data.progress_percent + "%";
      }
    });
  });
</script>

<script>
  const updateButton = document.querySelector('.update-btn');
  const confid = document.querySelector('.conf-header').getAttribute('data-id');

  updateButton.addEventListener('click', async () => {
    console.log('updateButton clicked');
    let text = updateButton.innerHTML;
    updateButton.innerHTML = 'Updating...';
    const response = await fetch('/api/v1/conference/update-crawl-conference?id='+confid);
    const data = await response.json();
    if(!data.job_id){
      window.alert('Update failed');
    }
    else{
      socket.emit('job', data.job_id);
    }
    updateButton.innerHTML = text;
    console.log(data);
  });

</script>