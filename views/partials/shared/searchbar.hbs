<div class="ftco-search my-md-5">
    <div class="row">
        <div class="col-md-12 nav-link-wrap">
            <div class="nav nav-pills text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active mr-md-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab"
                    aria-controls="v-pills-1" aria-selected="true">Find
                    a Conference</a>

                <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab"
                    aria-controls="v-pills-2" aria-selected="false">Find a Journal</a>

            </div>
        </div>
        <div class="col-md-12 tab-wrap">

            <div class="tab-content p-4" id="v-pills-tabContent">

                <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel"
                    aria-labelledby="v-pills-nextgen-tab">
                    <form action="#" class="search-job">
                        <div class="row gap-2">

                            {{!-- Category search group --}}
                            <div class="row col-sm-12 col-lg-6 m-0 mb-2">
                                <div class="col-6 m-0 pl-0">
                                    {{#renderForDivForm forDivisions}}{{/renderForDivForm}}
                                </div>

                                <div class="col-6 m-0 pl-0">
                                    {{#renderForGroupForm forGroups}}{{/renderForGroupForm}}
                                </div>
                            </div>
                            <div class="row col-sm-12 col-lg-6 m-0 mb-2">
                                <div class="col-6 pl-0">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="icon"><span class="icon-briefcase"></span></div>
                                            <input type="text" name = "name" class="form-control" placeholder="Title or acroyms">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 pl-0">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="icon"><span class="icon-map-marker"></span></div>
                                            <input type="text" name = "location" class="form-control" placeholder="Location">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-sm-12 col-lg-6 m-0 mb-2">
                                <div class="col-1 px-1 py-2">FROM</div>
                                <div class="col-5 m-0 ">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="icon"><span class="icon-calendar"></span></div>
                                            <input type="date" class="form-control" name = "fromDate" id="start-date" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-1 px-1 py-2"> TO </div>
                                <div class="col-5 m-0">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="icon"><span class="icon-calendar"></span></div>
                                            <input type="date" name = "toDate" class="form-control" id="end-date" placeholder="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-sm-12 col-lg-6 m-0 ">
                               <div class="col-6 m-0 pl-0">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                <select name="source" id="" class="form-control">
                                                    <option value="">All Sources</option>
                                                      {{#each allSources}}
                                                    <option value="{{name}}">{{name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 m-0 pl-0">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                <select name="rank" id="" class="form-control">
                                                    <option value="">All Ranks</option>
                                                    {{#each allRanks}}
                                                    <option value="{{rank}}">{{rank}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="form-group col-12">
                                <div class="form-field">
                                    <button type="submit" class="form-control btn btn-primary">Search</button>
                                </div>
                                <script >
                                    const form = document.querySelector('.search-job');
                                    form.addEventListener('submit', (e) => {
                                        e.preventDefault();
                                        const source = form.querySelector('select[name="source"]').value;

                                        const rank = form.querySelector('select[name="rank"]').value;
                                        const name = form.querySelector('input[name="name"]').value;
                                        const location = form.querySelector('input[name="location"]').value;
                                        const fromDate = form.querySelector('input[name="fromDate"]').value;
                                        const toDate = form.querySelector('input[name="toDate"]').value;
                                        const forDivision = form.querySelector('select[name="forDivision"]').value;
                                        const forGroup = form.querySelector('select[name="forGroup"]').value;
                                        const data = {
                                            source,
                                            rank,
                                            name,
                                            location,
                                            fromDate,
                                            toDate,
                                            forDivision,
                                            forGroup
                                        }
                                        window.location.href = `/browse?${new URLSearchParams(data).toString()}`;
                                    });
                                </script>

                            </div>
                        </div>

                    </form>
                </div>

                <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-performance-tab">
                    <form action="#" class="search-job">
                        <div class="row">
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="form-field">
                                        <div class="icon"><span class="icon-user"></span></div>
                                        <input type="text" class="form-control" placeholder="eg. Adam Scott">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="form-field">
                                        <div class="select-wrap">
                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                            <select name="" id="master-category" class="form-control">
                                                <option value="">Category</option>
                                                <option value="">Full Time</option>
                                                <option value="">Part Time</option>
                                                <option value="">Freelance</option>
                                                <option value="">Internship</option>
                                                <option value="">Temporary</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="form-field">
                                        <div class="icon"><span class="icon-map-marker"></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Location">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="form-field">
                                        <button type="submit" class="form-control btn btn-primary">Search</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>